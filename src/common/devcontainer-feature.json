{
  "id": "common",
  "name": "Common Development Tools",
  "version": "0.0.1",
  "documentationURL": "https://github.com/aliuq/devcontainer-features/tree/main/src/common",
  "description": "Install and configure common development tools including eza, fzf, zoxide, mise, Monaspace Nerd Font, starship, and zsh plugins",
  "options": {
    "defaultShell": {
      "type": "string",
      "default": "zsh",
      "description": "Set the default shell (bash or zsh)",
      "enum": [
        "bash",
        "zsh"
      ]
    },
    "installEza": {
      "type": "boolean",
      "default": true,
      "description": "Install eza (modern replacement for ls)"
    },
    "installFzf": {
      "type": "boolean",
      "default": true,
      "description": "Install fzf (fuzzy finder)"
    },
    "installZoxide": {
      "type": "boolean",
      "default": true,
      "description": "Install zoxide (smarter cd command)"
    },
    "installMise": {
      "type": "boolean",
      "default": true,
      "description": "Install mise (polyglot tool version manager)"
    },
    "installStarship": {
      "type": "boolean",
      "default": false,
      "description": "Install starship prompt"
    },
    "starshipConfigUrl": {
      "type": "string",
      "default": "",
      "description": "URL to a starship.toml configuration file to download and use"
    },
    "installZshPlugins": {
      "type": "boolean",
      "default": true,
      "description": "Install zsh-autosuggestions and zsh-syntax-highlighting"
    },
    "proxyUrl": {
      "type": "string",
      "default": "",
      "description": "URL of the proxy server to use for downloading resources (e.g., https://proxy.example.com:8080/), ends with a slash '/'"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
