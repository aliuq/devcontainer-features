{
  "id": "common",
  "name": "Common Development Tools",
  "version": "0.1.6",
  "documentationURL": "https://github.com/aliuq/devcontainer-features/tree/main/src/common",
  "description": "Install and configure common development tools including eza, fzf, zoxide, mise, starship, yazi, and zsh plugins",
  "options": {
    "defaultShell": {
      "type": "string",
      "default": "zsh",
      "description": "Default shell to configure (bash or zsh)",
      "enum": [
        "bash",
        "zsh"
      ]
    },
    "installEza": {
      "type": "boolean",
      "default": true,
      "description": "Install eza (modern ls replacement)"
    },
    "installFzf": {
      "type": "boolean",
      "default": true,
      "description": "Install fzf (fuzzy finder)"
    },
    "installZoxide": {
      "type": "boolean",
      "default": true,
      "description": "Install zoxide (smart cd)"
    },
    "installMise": {
      "type": "boolean",
      "default": true,
      "description": "Install mise (tool version manager)"
    },
    "misePackages": {
      "type": "string",
      "default": "",
      "description": "Mise packages to install globally (comma-separated, e.g., 'node@lts,bun,pnpm')"
    },
    "installStarship": {
      "type": "boolean",
      "default": false,
      "description": "Install starship prompt"
    },
    "starshipUrl": {
      "type": "string",
      "default": "",
      "description": "Custom starship.toml URL"
    },
    "zshPlugins": {
      "type": "string",
      "default": "",
      "description": "Oh-my-zsh plugins (comma-separated, e.g., 'git,docker,kubectl')"
    },
    "zshCustomPlugins": {
      "type": "string",
      "default": "",
      "description": "Custom zsh plugins (comma-separated GitHub repos, e.g., 'user/repo1,user/repo2')"
    },
    "proxyUrl": {
      "type": "string",
      "default": "",
      "description": "Proxy server URL (e.g., https://proxy.example.com:8080)"
    },
    "installHttpie": {
      "type": "boolean",
      "default": false,
      "description": "Install HTTPie (HTTP client)"
    },
    "installYazi": {
      "type": "boolean",
      "default": false,
      "description": "Install Yazi (terminal file manager)"
    },
    "yaziFlavor": {
      "type": "string",
      "default": "dracula",
      "description": "Yazi dark theme (e.g., dracula, user/repo, user/repo:theme-name)",
      "proposals": [
        "dracula",
        "catppuccin-mocha",
        "catppuccin-latte",
        "catppuccin-frappe",
        "catppuccin-macchiato",
        "BennyOe/tokyo-night",
        "dangooddd/kanagawa",
        "marcosvnmelo/kanagawa-dragon",
        "muratoffalex/kanagawa-lotus",
        "bennyyip/gruvbox-dark",
        "kmlupreti/ayu-dark",
        "Chromium-3-Oxide/everforest-medium",
        "ficd0/ashen:ashen",
        "gosxrgxx/flexoki-dark",
        "gosxrgxx/flexoki-light",
        "Mintass/rose-pine",
        "Mintass/rose-pine-moon",
        "Mintass/rose-pine-dawn",
        "tomer-ben-david/neon",
        "AdithyanA2005/nord",
        "Miuzarte/synthwave84"
      ]
    },
    "yaziFlavorLight": {
      "type": "string",
      "default": "dracula",
      "description": "Yazi light theme (e.g., dracula, user/repo, user/repo:theme-name)",
      "proposals": [
        "dracula",
        "catppuccin-mocha",
        "catppuccin-latte",
        "catppuccin-frappe",
        "catppuccin-macchiato",
        "BennyOe/tokyo-night",
        "dangooddd/kanagawa",
        "marcosvnmelo/kanagawa-dragon",
        "muratoffalex/kanagawa-lotus",
        "bennyyip/gruvbox-dark",
        "kmlupreti/ayu-dark",
        "Chromium-3-Oxide/everforest-medium",
        "ficd0/ashen:ashen",
        "gosxrgxx/flexoki-dark",
        "gosxrgxx/flexoki-light",
        "Mintass/rose-pine",
        "Mintass/rose-pine-moon",
        "Mintass/rose-pine-dawn",
        "tomer-ben-david/neon",
        "AdithyanA2005/nord",
        "Miuzarte/synthwave84"
      ]
    },
    "pnpmCompletion": {
      "type": "boolean",
      "default": false,
      "description": "Enable pnpm shell completion (ref: https://pnpm.io/zh/completion)"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ],
  "containerEnv": {
    "LANG": "en_US.UTF-8",
    "MISE_DATA_DIR": "/usr/local/share/mise",
    "MISE_SYSTEM_DIR": "/etc/mise"
  }
}
